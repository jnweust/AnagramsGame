<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/userEntryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonsTableLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TableLayout
        android:id="@+id/buttonsTableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:id="@+id/topLettersRow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <Button
                android:id="@+id/firstLetterButton"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@android:color/transparent"
                android:text="A"
                android:textColor="@android:color/primary_text_light"
                android:textSize="26sp"
                android:textStyle="bold"
                android:padding="0dp"/>
            <Button
                android:id="@+id/secondLetterButton"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@android:color/transparent"
                android:text="A"
                android:textColor="@android:color/primary_text_light"
                android:textSize="26sp"
                android:textStyle="bold"
                android:padding="0dp"/>
            <Button
                android:id="@+id/thirdLetterButton"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@android:color/transparent"
                android:text="A"
                android:textColor="@android:color/primary_text_light"
                android:textSize="26sp"
                android:textStyle="bold"
                android:padding="0dp"/>
        </TableRow>

        <TableRow
            android:id="@+id/middleLettersRow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <Button
                android:id="@+id/fourthLetterButton"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@android:color/transparent"
                android:text="A"
                android:textColor="@android:color/primary_text_light"
                android:textSize="26sp"
                android:textStyle="bold"
                android:padding="0dp"/>
            <Button
                android:id="@+id/fifthLetterButton"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@android:color/transparent"
                android:text="A"
                android:textColor="@android:color/primary_text_light"
                android:textSize="26sp"
                android:textStyle="bold"
                android:padding="0dp"/>
            <Button
                android:id="@+id/sixthLetterButton"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@android:color/transparent"
                android:text="A"
                android:textColor="@android:color/primary_text_light"
                android:textSize="26sp"
                android:textStyle="bold"
                android:padding="0dp"/>
        </TableRow>

        <TableRow
            android:id="@+id/bottomLettersRow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <Button
                android:id="@+id/seventhLetterButton"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@android:color/transparent"
                android:text="A"
                android:textColor="@android:color/primary_text_light"
                android:textSize="26sp"
                android:textStyle="bold"
                android:padding="0dp"/>
            <Button
                android:id="@+id/eighthLetterButton"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@android:color/transparent"
                android:text="A"
                android:textColor="@android:color/primary_text_light"
                android:textSize="26sp"
                android:textStyle="bold"
                android:padding="0dp"/>
            <Button
                android:id="@+id/ninrhLetterButton"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@android:color/transparent"
                android:text="A"
                android:textColor="@android:color/primary_text_light"
                android:textSize="26sp"
                android:textStyle="bold"
                android:padding="0dp"/>
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>